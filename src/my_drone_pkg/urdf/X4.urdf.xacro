<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="X4">

  <!-- Material definitions -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>
  <material name="grey">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="3.42"/>
      <inertia ixx="0.075" ixy="0" ixz="0" iyy="0.075" iyz="0" izz="0.148916"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/x4.dae" scale="1 1 1"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.25"/>
      </geometry>
    </collision>

    <!-- Additional visual elements -->
    <visual name="marker_visual_1">
      <origin xyz="-0.1 0 0.077" rpy="0 -0.1 0"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/led.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <visual name="marker_visual_2">
      <origin xyz="-0.09 0.059 0.059" rpy="-0.785397 0 0.2"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/led.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <visual name="marker_visual_3">
      <origin xyz="-0.09 -0.059 0.059" rpy="0.785397 0 -0.2"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/led.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <!-- Camera mount visuals -->
    <visual name="camera_mount_base_visual">
      <origin xyz="0.05 0 -0.030" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.006"/>
      </geometry>
    </visual>

    <visual name="camera_mount_arm_visual">
      <origin xyz="0.08 0 -0.040" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.005" length="0.08"/>
      </geometry>
    </visual>

    <visual name="camera_mount_arm2_visual">
      <origin xyz="0.08 0 -0.08" rpy="0 1.57 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.025"/>
      </geometry>
    </visual>

    <visual name="camera_visual">
      <origin xyz="0.1 0 -0.08" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.025 0.025"/>
      </geometry>
    </visual>
  </link>

  <!-- Rotor 0 -->
  <link name="rotor_0">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0" iyy="8.13545e-05" iyz="0" izz="8.22545e-05"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/neo11_propeller_ccw.dae" scale="1 1 1"/>
      </geometry>
      <material name="red"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1397" length="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="rotor_0_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_0"/>
    <origin xyz="0.247 0.1506 0.028" rpy="0.087267 0 0.523599"/>
    <axis xyz="0.043578 -0.075479 0.996195"/>
  </joint>

  <!-- Rotor 1 -->
  <link name="rotor_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0" iyy="8.13545e-05" iyz="0" izz="8.22545e-05"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/neo11_propeller_cw.dae" scale="1 1 1"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1397" length="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="rotor_1_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_1"/>
    <origin xyz="-0.00067 0.28929 0.028" rpy="0 -0.087267 0"/>
    <axis xyz="-0.087156 0 0.996195"/>
  </joint>

  <!-- Rotor 2 -->
  <link name="rotor_2">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0" iyy="8.13545e-05" iyz="0" izz="8.22545e-05"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/neo11_propeller_ccw.dae" scale="1 1 1"/>
      </geometry>
