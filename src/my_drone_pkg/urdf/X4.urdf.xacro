    </joint>
    <actuator name="rotor_4_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="rotor_5_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="rotor_5_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="rotor_5_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

</robot>