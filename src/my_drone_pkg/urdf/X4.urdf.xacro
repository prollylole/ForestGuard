    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1397" length="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="rotor_2_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_2"/>
    <origin xyz="-0.2501 0.1454 0.028" rpy="0.087267 0 2.61799"/>
    <axis xyz="0.043578 0.075479 0.996195"/>
  </joint>

  <!-- Rotor 3 -->
  <link name="rotor_3">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0" iyy="8.13545e-05" iyz="0" izz="8.22545e-05"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_drone_pkg/models/X4_GPS_LIDAR_RGBD/meshes/neo11_propeller_cw.dae" scale="1 1 1"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1397" length="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="rotor_3_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_3"/>
    <origin xyz="-0.2501 -0.1454 0.028" rpy="-0.087267 0 -2.61799"/>
    <axis xyz="0.043578 -0.075479 0.996195"/>
  </joint>

  <!-- Rotor 4 -->
  <link name="rotor_4">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0" iyy="8.13545e-05" iyz="0" izz="8.22545e-05"/>
